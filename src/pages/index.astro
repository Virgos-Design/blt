---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/SplashLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Intro from '~/components/widgets/Intro.astro';
import OurFacility from '~/components/widgets/OurFacility.astro';
import WhyBLT from '~/components/widgets/WhyBLT.astro';
import Prices from '~/components/widgets/Prices.astro';
import Contact from '~/components/widgets/Contact.astro';
import OurStory from '~/components/widgets/OurStory.astro';
import SectionCap from '~/components/widgets/SectionCap.astro';

import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import HighlightedPosts from '~/components/blog/HighlightedPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
	<Hero slot="hero" />
	<Intro bgColor="bg-gradient-to-br from-cyan-50 to-green-100" />
	<SectionCap topColor="green-100" />
	<OurStory />
	<OurFacility />
	<Prices />
	<WhyBLT />
	<Contact />
</Layout>
