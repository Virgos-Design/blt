---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/SplashLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Intro from '~/components/widgets/Intro.astro';
import OurFacility from '~/components/widgets/OurFacility.astro';
import WhyBLT from '~/components/widgets/WhyBLT.astro';
import Prices from '~/components/widgets/Prices.astro';
import Contact from '~/components/widgets/Contact.astro';
import OurStory from '~/components/widgets/OurStory.astro';
import FAQs from '~/components/widgets/FAQs.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
	<Hero slot="hero" />
	<Intro />
	<OurStory />
	<OurFacility />
	<WhyBLT />
	<Prices />
	<FAQs />
	<Contact />
</Layout>
