---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import About from '~/components/widgets/About.astro';
import Contact from '~/components/widgets/Contact.astro';
import CTA from '~/components/widgets/CTA.astro';
import Facility from '~/components/widgets/Facility.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Hero from '~/components/widgets/Hero.astro';
import Intro from '~/components/widgets/Intro.astro';
import Layout from '~/layouts/SplashLayout.astro';
import Prices from '~/components/widgets/Prices.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
	<Hero slot="hero" />
	<Intro />
	<About />
	<Facility />
	<CTA />
	<Prices />
	<FAQs />
	<Contact />
</Layout>
