---
export interface Props {
	title: string;
	id: string;
	styles?: string;
	pattern?: string;
	image: string;
	imageAlt: string;
}

import { Image } from '@astrojs/image/components';
import { colorize } from '~/utils/colorizer';
const { title, id, styles, pattern, image, imageAlt } = Astro.props;
const colTitle = colorize(title);
---

<section
	id={id}
	class={`min-h-screen flex flex-col gap-4 space-y-8 scroll-mt-16 px-4 pt-4 pb-16 sm:px-6 mx-auto lg:px-8 lg:pb-20 ${styles}`}
	style={pattern}
>
	<div class="flex flex-col items-center gap-4">
		<slot name="eyebrow" />
		<h2
			class="text-6xl md:text-7xl font-extrabold tracking-wider text-center font-['AwesomeNewbie']"
			set:html={colTitle}
			style="text-shadow: 1px 1px 3px #6B7280;"
		>
		</h2>
	</div>
	<div class="text-sky-900 mx-auto">
		<div class="flex flex-col md:flex-row space-y-6 md:space-y-0 md:gap-6 lg:gap-12">
			<div class="md:w-7/12 lg:w-6/12 text-2xl">
				<p class="text-2xl md:mt-5 text-center md:text-right">
					<slot name="lead" />
				</p>
			</div>
			<div class="md:w-5/12 lg:w-6/12 h-full mx-auto">
				<Image src={image} alt={imageAlt} class="rounded-md shadow-sm shadow-black h-full" />
			</div>
		</div>
	</div>
</section>
