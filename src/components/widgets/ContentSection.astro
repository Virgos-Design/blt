---
export interface Props {
	title: string;
	id: string;
	styles?: string;
	pattern?: string;
}

import { colorize } from '~/utils/colorizer';
const { title, id, styles, pattern } = Astro.props;
const colTitle = colorize(title);
---

<section
	id={id}
	class={`relative flex flex-col items-center gap-4 space-y-8 scroll-mt-16 px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 ${styles}`}
	style={pattern}
>
	<div class="flex flex-col items-center gap-4">
		<slot name="eyebrow" />
		<h2
			id="foo"
			class="text-6xl md:text-7xl font-extrabold tracking-wider text-center font-['AwesomeNewbie']"
			set:html={colTitle}
			style="text-shadow: 1px 1px 3px #000000;"
		>
		</h2>
	</div>
	<p class="text-sky-900 font-bold md:text-4xl text-center max-w-3xl">
		<slot name="lead" />
	</p>
	<slot />
</section>
