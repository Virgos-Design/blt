---
const { title, id, styles, pattern } = Astro.props;
---

<section {id} 
	class={`relative flex flex-col items-center gap-4 space-y-8 scroll-mt-16 px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl ${styles}`}
	style={pattern}	
>
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2
      class="text-6xl md:text-7xl font-extrabold tracking-wider text-center text-[#321A81] font-['AwesomeNewbie']"
    >
      {title}
    </h2>
  </div>
  <p class="max-w-xl text-2xl font-extrabold text-center text-[#321A81]">
    <slot name="lead" />
  </p>
  <slot />
</section>
