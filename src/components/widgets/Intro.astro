---
import ContentSection from './ContentSection.astro';
const { bgColor } = Astro.props;
---

<ContentSection title="Learning Today, Leading Tomorrow." id="intro" styles={`pt-16 lg:pt-20 ${bgColor}`}>
	<div class="m-auto px-6 text-gray-500 md:px-12">
		<div class="grid lg:grid-cols-7 gap-6">
			<div class="lg:col-span-3">
				<div
					class="fb-page"
					data-href="https://www.facebook.com/bluffsthinkers"
					data-tabs="timeline"
					data-width="500"
					data-height=""
					data-small-header="true"
					data-adapt-container-width="true"
					data-hide-cover="true"
					data-show-facepile="false"
				>
					<blockquote cite="https://www.facebook.com/bluffsthinkers" class="fb-xfbml-parse-ignore">
						<a href="https://www.facebook.com/bluffsthinkers"
							>Bluff&#039;s Little Thinkers Educational and Child Care Center</a
						>
					</blockquote>
				</div>
			</div>
			<div class="lg:col-span-4 lg:order-first">
				<div class="bg-white rounded-xl shadow-lg px-8 space-y-4 py-12 sm:px-12 lg:px-8">photos</div>
			</div>
		</div>
	</div>
</ContentSection>
