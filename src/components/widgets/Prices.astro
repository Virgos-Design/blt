---
import ContentSection from "~/components/widgets/ContentSection.astro";

var bgPattern = `background-color: #ffffff;
background-image: url("data:image/svg+xml,%3Csvg width='80' height='80' viewBox='0 0 80 80' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%232e8e00' fill-opacity='0.47'%3E%3Cpath d='M50 50c0-5.523 4.477-10 10-10s10 4.477 10 10-4.477 10-10 10c0 5.523-4.477 10-10 10s-10-4.477-10-10 4.477-10 10-10zM10 10c0-5.523 4.477-10 10-10s10 4.477 10 10-4.477 10-10 10c0 5.523-4.477 10-10 10S0 25.523 0 20s4.477-10 10-10zm10 8c4.418 0 8-3.582 8-8s-3.582-8-8-8-8 3.582-8 8 3.582 8 8 8zm40 40c4.418 0 8-3.582 8-8s-3.582-8-8-8-8 3.582-8 8 3.582 8 8 8z' /%3E%3C/g%3E%3C/g%3E%3C/svg%3E");`

---

<ContentSection title="Our Prices" id="pricing" pattern={bgPattern} >
  <Fragment slot="lead">
    We try to keep our prices competitive, but this is childcare in America, here are our ridiculous prices.
  </Fragment>
			
<div class="w-full bg-white rounded-lg border shadow-md dark:bg-gray-800 dark:border-gray-700">
	<div class="sm:hidden">
			<label for="tabs" class="sr-only">Select tab</label>
			<select id="tabs" class="bg-gray-50 border-0 border-b border-gray-200 text-gray-900 sm:text-sm rounded-t-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
					<option>Statistics</option>
					<option>Services</option>
					<option>FAQ</option>
					<option>FAQ</option>
					<option>FAQ</option>
			</select>
	</div>
	<ul class="hidden text-sm font-medium text-center text-gray-500 rounded-lg divide-x divide-gray-200 sm:flex dark:divide-gray-600 dark:text-gray-400" id="fullWidthTab" data-tabs-toggle="#fullWidthTabContent" role="tablist">
			<li class="w-full">
					<button id="infant-tab" data-tabs-target="#stats" type="button" role="tab" aria-controls="stats" aria-selected="true" class="inline-block p-4 w-full bg-gray-50 rounded-tl-lg hover:bg-gray-100 focus:outline-none dark:bg-gray-700 dark:hover:bg-gray-600 text-blue-600 hover:text-blue-600 dark:text-blue-500 dark:hover:text-blue-500 border-blue-600 dark:border-blue-500">6 weeks - 15 mos</button>
			</li>
			<li class="w-full">
					<button id="one-year-tab" data-tabs-target="#about" type="button" role="tab" aria-controls="about" aria-selected="false" class="inline-block p-4 w-full bg-gray-50 active:bg-red-500 transition duration-500 ease-in-out hover:bg-gray-100 focus:outline-none dark:bg-gray-700 dark:hover:bg-gray-600 dark:border-transparent text-gray-500 hover:text-gray-600 dark:text-gray-400 border-gray-100 hover:border-gray-300 dark:border-gray-700 dark:hover:text-gray-300">15 - 24 mos</button>
			</li>
			<li class="w-full">
					<button id="two-year-tab" data-tabs-target="#faq" type="button" role="tab" aria-controls="faq" aria-selected="false" class="inline-block p-4 w-full bg-gray-50 rounded-tr-lg hover:bg-gray-100 focus:outline-none dark:bg-gray-700 dark:hover:bg-gray-600 dark:border-transparent text-gray-500 hover:text-gray-600 dark:text-gray-400 border-gray-100 hover:border-gray-300 dark:border-gray-700 dark:hover:text-gray-300">2 - 3 years</button>
			</li>
			<li class="w-full">
				<button id="three-year-tab" data-tabs-target="#faq" type="button" role="tab" aria-controls="faq" aria-selected="false" class="inline-block p-4 w-full bg-gray-50 rounded-tr-lg hover:bg-gray-100 focus:outline-none dark:bg-gray-700 dark:hover:bg-gray-600 dark:border-transparent text-gray-500 hover:text-gray-600 dark:text-gray-400 border-gray-100 hover:border-gray-300 dark:border-gray-700 dark:hover:text-gray-300">3 - 4 years</button>
			</li>
			<li class="w-full">
				<button id="preschool-tab" data-tabs-target="#faq" type="button" role="tab" aria-controls="faq" aria-selected="false" class="inline-block p-4 w-full bg-gray-50 rounded-tr-lg hover:bg-gray-100 focus:outline-none dark:bg-gray-700 dark:hover:bg-gray-600 dark:border-transparent text-gray-500 hover:text-gray-600 dark:text-gray-400 border-gray-100 hover:border-gray-300 dark:border-gray-700 dark:hover:text-gray-300">4 - 5 years</button>
			</li>
	</ul>
	<div id="fullWidthTabContent" class="border-t border-gray-200 dark:border-gray-600">
			<div class="p-4 bg-white rounded-lg md:p-8 dark:bg-gray-800" id="infantCard" role="tabpanel" aria-labelledby="stats-tab">
					infant
			</div>
			<div class="hidden p-4 bg-white rounded-lg md:p-8 dark:bg-gray-800" id="oneYearCard" role="tabpanel" aria-labelledby="about-tab">
					one
			</div>
			<div class="hidden p-4 bg-white rounded-lg md:p-8 dark:bg-gray-800" id="twoYearCard" role="tabpanel" aria-labelledby="faq-tab">
					two
			</div>
			<div class="hidden p-4 bg-white rounded-lg md:p-8 dark:bg-gray-800" id="threeYearCard" role="tabpanel" aria-labelledby="stats-tab">3</div>
			<div class="hidden p-4 bg-white rounded-lg md:p-8 dark:bg-gray-800" id="preschoolCard" role="tabpanel" aria-labelledby="stats-tab">pre</div>
	</div>
</div>

</ContentSection>

<script>
	const infantTab = document.querySelector('#infant-tab');
	const infantCard = document.querySelector('#infantCard');
  infantTab.addEventListener('click', () => {
		infantCard.classList.remove('hidden');
		oneYearCard.classList.add('hidden');
		twoYearCard.classList.add('hidden');
		threeYearCard.classList.add('hidden');
		preschoolCard.classList.add('hidden');
	});

	const oneYearTab = document.querySelector('#one-year-tab');
	const oneYearCard = document.querySelector('#oneYearCard');
  oneYearTab.addEventListener('click', () => {
		oneYearCard.classList.remove('hidden');
		infantCard.classList.add('hidden');
		twoYearCard.classList.add('hidden');
		threeYearCard.classList.add('hidden');
		preschoolCard.classList.add('hidden');
	});

	const twoYearTab = document.querySelector('#two-year-tab');
	const twoYearCard = document.querySelector('#twoYearCard');
  twoYearTab.addEventListener('click', () => {
		twoYearCard.classList.remove('hidden');
		infantCard.classList.add('hidden');
		oneYearCard.classList.add('hidden');
		threeYearCard.classList.add('hidden');
		preschoolCard.classList.add('hidden');
	});

	const threeYearTab = document.querySelector('#three-year-tab');
	const threeYearCard = document.querySelector('#threeYearCard');
  threeYearTab.addEventListener('click', () => {
		threeYearCard.classList.remove('hidden');
		infantCard.classList.add('hidden');
		oneYearCard.classList.add('hidden');
		twoYearCard.classList.add('hidden');
		preschoolCard.classList.add('hidden');
	});

	const preschoolTab = document.querySelector('#preschool-tab');
	const preschoolCard = document.querySelector('#preschoolCard');
  preschoolTab.addEventListener('click', () => {
		preschoolCard.classList.remove('hidden');
		infantCard.classList.add('hidden');
		oneYearCard.classList.add('hidden');
		twoYearCard.classList.add('hidden');
		threeYearCard.classList.add('hidden');
	});
  
</script>
