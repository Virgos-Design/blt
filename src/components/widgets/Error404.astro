---
import { getHomePermalink } from '~/utils/permalinks';
---

<section class="flex items-center h-screen p-16 bg-gradient-to-b from-sky-50 to-sky-200">
	<div class="flex flex-col items-center justify-center px-5 mx-auto my-8">
		<div class="max-w-md text-center">
			<h2 class="mb-8 font-bold text-9xl">
				<span class="sr-only">Error</span>
				<span class="bg-clip-text text-transparent bg-[#087BB8]">404</span>
			</h2>
			<p class="text-3xl font-semibold md:text-3xl text-sky-900">Sorry, we couldn't find this page.</p>
			<a
				rel="noopener noreferrer"
				href={getHomePermalink()}
				class="btn text-white mt-8 bg-[#FF81A3] hover:bg-[#eb6085] ml-4">Back to homepage</a
			>
		</div>
	</div>
</section>
